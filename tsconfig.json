{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "lib": ["esnext"],
    "outDir": "./dist",
    "rootDir": "./src",

    /* Bundler mode */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["bun-types", "@cloudflare/workers-types", "node"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true

    /* path aliases */
    // "baseUrl": "./",
    // "paths": {
    //   "@/*": ["src/*"]
    // }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "_api"]
}
