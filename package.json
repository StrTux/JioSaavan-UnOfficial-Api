{
  "name": "jio-saavn-api",
  "description": "ðŸŽµ An Unofficial wrapper for the Jio Saavn API.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/dev.ts",
    "dev:vercel": "vercel dev",
    "dev:node": "tsx watch src/dev.ts",
    "dev:vc": "vercel dev -l 3001",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "vercel --prod",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,json --report-unused-disable-directives --max-warnings 0",
    "fmt": "prettier --write \"**/*.{ts,json}\" --cache",
    "fmt:check": "prettier --check \"**/*.{ts,json}\" --cache",
    "prepare": "husky",
    "test": "bun test --coverage --reporter=test/reporter.ts",
    "test:api": "vitest test/api.test.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "test"
    ]
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write \"**/*.{ts,json}\" --cache",
      "eslint --fix ."
    ],
    "*.ts": [
      "tsc --noEmit --esModuleInterop --skipLibCheck --types bun-types"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/node.ts"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^5.1.0",
    "@hono/node-server": "^1.13.2",
    "@types/dotenv": "^6.1.1",
    "@types/marked": "^5.0.2",
    "@upstash/ratelimit": "^2.0.3",
    "@upstash/redis": "^1.34.3",
    "@vercel/edge-config": "^1.4.0",
    "@vercel/node": "^5.1.8",
    "bun-vercel": "^1.0.0-alpha.5",
    "cheerio": "^1.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "entities": "^5.0.0",
    "express-rate-limit": "^7.5.0",
    "hono": "^4.6.5",
    "marked": "^15.0.7",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241018.0",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vitest/ui": "^3.0.6",
    "bun-types": "^1.1.31",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.6",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.7.3",
    "vercel": "^41.2.0",
    "vite": "^6.1.1",
    "vitest": "^3.0.6",
    "wrangler": "^3.81.0"
  }
}
